<%- include ('partials/header') %>
<div class="container createandedit">
    <h1 class="display-3 formtitle"> Edit Blog</h1>
    <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <label>Title</label>
          <input type="text" class="form-control" name="blog[title]" value="<%=blog.title%>">
        </div>
        <div class="form-group">
          <label>Image</label>
          <input type="text" class="form-control" name="blog[image]" value="<%=blog.image%>">
        </div>
        <div class="form-group">
            <label>Author</label>
            <input type="text" class="form-control" name="blog[author]" value="<%=blog.author%>">
        </div>   
        <div class="form-group">
          <label>Blog Content</label>
          <textarea class="form-control" rows="6" name="blog[body]"><%=blog.body%></textarea>
        </div>
          <button type="submit" class="btn btn-lg btn-success">Update Post</button>
      </form>
</div>
<%- include ('partials/footer') %>